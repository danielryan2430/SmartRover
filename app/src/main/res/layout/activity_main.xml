<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5px"
        android:text="@string/analog_label" />

    <TextView
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textSize="72sp" />

    <ToggleButton
        android:id="@+id/ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20px"
        android:textOff="Led is OFF"
        android:textOn="Led is ON"
        />

    <GridLayout
        android:id="@+id/gridButtons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#222222"
        android:rowCount="4"
        android:columnCount="2">

        <Button
            android:id="@+id/btnDriveLeftFwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Left Motor FWD" />

        <Button
            android:id="@+id/btnDriveRightFwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_row="0"
            android:layout_column="1"
            android:text="Right Motor FWD" />

        <Button
            android:id="@+id/btnDriveLeftRev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Left Motor REV" />

        <Button
            android:id="@+id/btnDriveRightRev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_row="1"
            android:layout_column="1"
            android:text="Right Motor REV" />


        <Button
            android:id="@+id/btnForkliftUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Forklift Up" />

        <Button
            android:id="@+id/btnForkliftDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_row="2"
            android:layout_column="1"
            android:text="Forklift Down" />

        <Button
            android:id="@+id/btnCameraPanLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_row="3"
            android:layout_column="0"
            android:text="Camera Pan Left" />

        <Button
            android:id="@+id/btnCameraPanRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_row="3"
            android:layout_column="1"
            android:text="Camera Pan Right" />


    </GridLayout>



</LinearLayout>